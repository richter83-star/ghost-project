{
  "name": "ghost-system-cloud",
  "version": "1.0.2",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "npm install && python -m pip install --upgrade pip && python -m pip install --no-cache-dir --index-url https://pypi.org/simple/ -r python/requirements.txt",
    "start": "node start.mjs",
    "forge": "tsx src/cli/forge.ts",
    "analyze": "tsx src/cli/analyze.ts",
    "weekly": "tsx src/cli/run-weekly.ts",
    "sync": "tsx src/cli/sync-analytics.ts",
    "govern": "tsx src/cli/auto-govern.ts",
    "controller": "tsx src/fleet/controller.ts",
    "register": "tsx src/fleet/register-node.ts",
    "abacus:sync": "tsx src/integrations/abacus/poll.ts",
        "fix:archived": "tsx src/cli/fix-archived-products.ts",
        "fix:shopify": "node run-fix.mjs",
        "verify:images": "tsx src/cli/verify-product-images.ts",
    "regenerate:images": "tsx src/cli/regenerate-images.ts",
    "verify:products": "tsx src/cli/verify-products.ts",
    "test:image-replacement": "node test-image-replacement.mjs",
        "adaptive-ai:analyze": "tsx src/cli/adaptive-ai.ts analyze",
        "adaptive-ai:generate": "tsx src/cli/adaptive-ai.ts generate",
        "theme:dracanus": "tsx src/cli/apply-dracanus-theme.ts",
    "py:init": "python -m pip install -r python/requirements.txt",
    "py:gen": "python python/product_generator.py",
    "py:fmt": "python python/formatter.py"
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "axios": "^1.7.7",
    "body-parser": "^1.20.3",
    "cron": "^3.1.7",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-rate-limit": "^7.1.5",
    "fast-glob": "^3.3.2",
    "firebase": "^10.12.0",
    "firebase-admin": "^13.6.0",
    "html-entities": "^2.5.2",
    "luxon": "^3.5.0",
    "markdown-it": "^14.1.0",
    "nanoid": "^5.0.7",
    "pg": "^8.13.0",
    "puppeteer": "^22.12.1",
    "resend": "^4.0.0",
    "sqlite3": "^5.1.7",
    "stripe": "^16.0.0",
    "twitter-api-v2": "^1.17.2",
    "tsx": "^4.19.0",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=22.x"
  }
}
